<% include head %>
<div id="titre"><h1>L'AF 2000</h1></div>

<div id="organigramme">
	<div class="ligne">
		<a href="/organigramme"><div class="organe" id="mouvement">
			<span>
				<h2>Instances supérieures</h2>
				<p>Pilotent le mouvement et le journal</p>
			</span>
		</div></a>
	</div>
	<div class="ligne">
		<div class="organe noexpansion" id="priep">
			<span>
				<h2>PRIEP</h2>
				<p>Société éditrice du journal</p>
			</span>
		</div>
	</div>
	<div class="ligne">
		<div class="organe" id="af2000" onclick="expand(this);">
			<span>
				<h2>Direction</h2>
				<p>Contrôle administratif et éditorial du journal</p>
			</span>
			<div class="membres">
				<div class="ligne">
					<div class="personne dirigeant" data-profil="marielle_pujo"></div>
				</div>
				<div class="ligne">
					<div class="personne" data-profil="gregoire_dubost"></div>
				</div>
				<button class="collapse" type="button" onclick="collapse('af2000');">Fermer</button>
			</div>
		</div>
	</div>
	<div class="ligne">
		<div class="organe noexpansion" id="comite_redaction">
			<span>
				<h2>Comité de rédaction</h2>
				<p>Sélection des articles à paraître</p>
			</span>
		</div>
	</div>
	<div class="ligne">
		<div class="organe noexpansion" id="redacteurs">
			<span>
				<h2>Rédacteurs</h2>
				<p>Contributeurs réguliers ou occasionnels du journal</p>
			</span>
		</div>
	</div>
</div>

<script>
	function expand(who) {
		who.className = "organe expanded";
	}

	function collapse(who) {
		setTimeout(function(){ document.getElementById(who).className = "organe" }, 10);
	}

	$(function() {
		$('.personne').each(function() {
			var div = this;
			$.get("/profil/" + div.dataset.profil, function( data ) {
				$(div).html($.trim(data));
			});
		});
	})
</script>

<% include foot %>