<% include head.ejs %>

<% include militez_tuiles.ejs %>
<div id="container">
<aside id="texte_aside">
	<div id="auteur"></div>
	<% include share.ejs %>
</aside>

<article id="texte_<%= data.code %>">
	<h1><%= data.titre %></h1>
	<p><%- data.texte %></p>
</article></div>

<script>
	$(function() {
		$.get("/profils/<%= data.profil_auteur %>/widget", function( data ) {
			$('#auteur').html(data);
		});

		$(window).scroll(function() {
			$('#texte_aside').css('top', $(this).scrollTop());
		});
	})
</script>

