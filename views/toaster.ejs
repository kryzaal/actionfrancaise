<% if(!header_toaster) { %>

<script>
    function showToaster(durationInSecs, success, message) {
        var toaster = $(document.createElement('div'))
        .addClass('toaster')
        .addClass(success ? "success" : "failure")

        toaster.text(message);

        $(document.body).prepend(toaster);
        toaster.fadeOut(durationInSecs * 1000, toaster.remove);
    }

    <% if(typeof toaster != 'undefined' && toaster) { %>
        showToaster( <%= toaster.duration %>, <%= toaster.success %>, "<%= toaster.html %>");
    <% } %>
</script>

<%
    var header_toaster = true;
}
%>