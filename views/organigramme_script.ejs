<script>
	function expand(who) {
		$(who).addClass('expanded');
	}

	function collapse(who) {
		setTimeout(function(){ $(who).parents().removeClass('expanded'); }, 5);
	}

	$(function() {
		$('.personne').each(function() {
			var div = this;
			$.get("/profils/" + div.dataset.profil + "/widget", function( data ) {
				$(div).html($.trim(data));
			});
		});
	})
</script>